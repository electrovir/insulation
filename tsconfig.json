{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "dist",
        "rootDir": "src",
        "skipDefaultLibCheck": true,
        "strict": true,
        "target": "es6"
    },
    "exclude": ["node_modules", "downloads", "dist", "test-imports"]
}
