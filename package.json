{
    "name": "insulation",
    "version": "4.0.1",
    "description": "Lightweight package to prevent unwanted imports between TS or JS folders.",
    "keywords": [
        "block",
        "directories",
        "directory",
        "folder",
        "folders",
        "import",
        "importing",
        "imports",
        "insulation",
        "isolation",
        "javascript",
        "partition",
        "partitioning",
        "prevent",
        "projects",
        "restrict",
        "typescript",
        "unwanted"
    ],
    "homepage": "https://github.com/electrovir/insulation",
    "bugs": {
        "url": "https://github.com/electrovir/insulation/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/electrovir/insulation"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir"
    },
    "main": "dist/src/index.js",
    "typings": "dist/src/index.d.ts",
    "bin": {
        "insulate": "dist/cli.js"
    },
    "scripts": {
        "compile": "rm -rf dist && tsc",
        "format:base": "prettier --ignore-path .gitignore \"./{,!(dist)/**/}*.+(ts|json|html|css)\"",
        "format:check": "npm run format:base -- --check",
        "format": "npm run format:base -- --write",
        "spellcheck": "cspell --unique \"./**/*\"",
        "prepublishOnly": "npm install && npm run format:check && npm test && rm -rf dist && tsc && chmod +x dist/cli.js",
        "test:full": "npm run test && npm run spellcheck -- --no-progress && npm run format:check",
        "test": "npm run compile && test-vir \"./**/!(*.type).test.js\""
    },
    "dependencies": {
        "dependency-cruiser": "10.0.6"
    },
    "devDependencies": {
        "@types/node": "16.4.7",
        "cspell": "^5.6.6",
        "prettier": "^2.3.2",
        "prettier-plugin-jsdoc": "^0.3.23",
        "prettier-plugin-organize-imports": "^2.3.3",
        "prettier-plugin-packagejson": "^2.2.11",
        "prettier-plugin-sort-json": "^0.0.2",
        "test-vir": "^0.2.1",
        "typescript": "4.3.5"
    }
}
